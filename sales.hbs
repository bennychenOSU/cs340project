<section>
    <table id="sales-table">
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            {{#each data}}
            <tr data-value={{this.ID}}>
                <td>{{this.ID}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.Title}}</td>
                <td><button onclick="deleteSale({{this.ID}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="../js/delete_sale.js"></script>
</section>


<h2>Adding Sale</h2>
<p>Add a sale.</p>
<form id="add-sale-form" method="POST" action="/add-sale-form">


    <label for="input_name">Name: </label>
    <input type="text" name="input_name" id="input-name">

    <label for="input_title">Title: </label>
    <input type="text" name="input_title" id="input-title">
    <input type="submit">
</form>

<h2>Search Sale</h2>
<form id="search-sale-form" method='GET' action='/sales'>
     <select name="search_sale_id" id="search_sale_id">
        <option value="">Select ID</option>
        {{#each sale_ids}}
        <option value="{{this.ID}}">{{this.ID}}</option>
        {{/each}}
    </select>
    <input type="submit">
    <a href='../sales'><button>Reset</button></a>
</form>

<section>
    <h2>Update Sale Title</h2>
<form id="update-sale-form">
    <label for="input-sale-id">Sale ID: </label>
    <select name="update_sale_id" id="update_sale_id">
        <option value="x">Select ID</option>
        {{#each sale_ids}}
        <option value="{{this.ID}}">{{this.ID}}</option>
        {{/each}}
    </select>

    <label for="update_sale_name">Sale Name:</label>
    <input type="text" name="update_sale_name" id="update_sale_name"></select>

     <label for="update_sale_title">Title:</label>
    <input type="text" name="update_sale_title" id="update_sale_title"></select>


    <input type="submit">
</form>
<script src="../js/update_sale.js"></script>    
</section>
