<section>
    <table id="stores-table">
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            {{#each data}}
            <tr data-value={{this.ID}}>
                <td>{{this.ID}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.Title}}</td>
                <td><button onclick="deleteStore({{this.ID}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="../js/delete_store.js"></script>
</section>


<h2>Adding Store</h2>
<p>Add a store.</p>
<form id="add-store-form" method="POST" action="/add-store-form">


    <label for="input_name">Name: </label>
    <input type="text" name="input_name" id="input-name">

    <label for="input_title">Title: </label>
    <input type="text" name="input_title" id="input-title">
    <input type="submit">
</form>

<h2>Search Store</h2>
<form id="search-store-form" method='GET' action='/stores'>
     <select name="search_store_id" id="search_store_id">
        <option value="">Select ID</option>
        {{#each store_ids}}
        <option value="{{this.ID}}">{{this.ID}}</option>
        {{/each}}
    </select>
    <input type="submit">
    <a href='../stores'><button>Reset</button></a>
</form>

<section>
    <h2>Update Store Title</h2>
<form id="update-store-form">
    <label for="input-store-id">Store ID: </label>
    <select name="update_store_id" id="update_store_id">
        <option value="x">Select ID</option>
        {{#each store_ids}}
        <option value="{{this.ID}}">{{this.ID}}</option>
        {{/each}}
    </select>

    <label for="update_store_name">Store Name:</label>
    <input type="text" name="update_store_name" id="update_store_name"></select>

     <label for="update_store_title">Title:</label>
    <input type="text" name="update_store_title" id="update_store_title"></select>


    <input type="submit">
</form>
<script src="../js/update_store.js"></script>    
</section>
