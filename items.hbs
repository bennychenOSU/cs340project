<section>
    <table id="items-table">
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            {{#each data}}
            <tr data-value={{this.ID}}>
                <td>{{this.ID}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.Title}}</td>
                <td><button onclick="deleteItem({{this.ID}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="../js/delete_item.js"></script>
</section>


<h2>Adding Item</h2>
<p>Add an item.</p>
<form id="add-item-form" method="POST" action="/add-item-form">


    <label for="input_name">Name: </label>
    <input type="text" name="input_name" id="input-name">

    <label for="input_title">Title: </label>
    <input type="text" name="input_title" id="input-title">
    <input type="submit">
</form>

<h2>Search Items</h2>
<form id="search-item-form" method='GET' action='/items'>
     <select name="search_item_id" id="search_item_id">
        <option value="">Select ID</option>
        {{#each item_ids}}
        <option value="{{this.ID}}">{{this.ID}}</option>
        {{/each}}
    </select>
    <input type="submit">
    <a href='../items'><button>Reset</button></a>
</form>

<section>
    <h2>Update Item Title</h2>
<form id="update-item-form">
    <label for="input-item-id">Item ID: </label>
    <select name="update_item_id" id="update_item_id">
        <option value="x">Select ID</option>
        {{#each item_ids}}
        <option value="{{this.ID}}">{{this.ID}}</option>
        {{/each}}
    </select>

    <label for="update_item_name">Item Name:</label>
    <input type="text" name="update_item_name" id="update_item_name"></select>

     <label for="update_item_title">Title:</label>
    <input type="text" name="update_item_title" id="update_item_title"></select>


    <input type="submit">
</form>
<script src="../js/update_item.js"></script>    
</section>
